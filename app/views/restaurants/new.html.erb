<div class="container">
  <h1>Add a restaurant</h1>

  <%= simple_form_for(@restaurant) do |r| %>
  <%=  r.input :name %>
  <%=  r.input :address %>
  <%=  r.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'] %>
  <%=  r.input :phone_number %>
  <%=  r.submit "Add a restaurant", class: "btn btn-primary" %>
  <% end %>

</div>
